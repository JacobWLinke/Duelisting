};

// --- Main App Component ---

const App = () => {
  const [currentView, setCurrentView] = useState(NAV_VIEWS.DASHBOARD);
  const { user, loading } = useCurrentUser();

  // Simple routing based on user state and hash for the prototype
  useEffect(() => {
    const hash = window.location.hash.slice(1);
    if (hash && NAV_VIEWS[hash.toUpperCase()]) {
        setCurrentView(NAV_VIEWS[hash.toUpperCase()]);
    } else if (!user && !loading) {
        setCurrentView(NAV_VIEWS.LOGIN);
    }
  }, [user, loading]);

  const setView = (view) => {
    window.location.hash = `#${view}`;
    setCurrentView(view);
  };


  let Content;
  if (loading) {
      Content = <div className="text-white text-center p-8 text-2xl">Loading Auth State...</div>;
  } else if (!user || currentView === NAV_VIEWS.LOGIN) {
      Content = <LoginForm setView={setView} />;
  } else if (currentView === NAV_VIEWS.DECK_BUILDER) {
      Content = <DeckBuilder />;
  } else {
      Content = <Dashboard setView={setView} />;
  }

  return (
    <div className="min-h-screen bg-gray-800 font-sans">
      <Header currentView={currentView} setView={setView} />
      <main>
        {Content}
      </main>
    </div>
  );
};

// This wrapper is needed to provide the Auth Context
const DuelistingApp = () => (
  <AuthProvider>
    <App />
  </AuthProvider>
);

export default DuelistingApp;


